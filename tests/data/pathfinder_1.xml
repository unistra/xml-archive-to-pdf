            <nom>arc</nom>
            <type>à distance</type>
            <portee>8</portee>
            <degat>2</degat>
            <element>glace</element>
            <rarete>simple</rarete>
            <prix>100</prix>
            <qualite>mauvaise</qualite>
        </arme>
        <arme>
            <nom>épée</nom>
            <type>à une main</type>
            <portee>5</portee>
            <degat>3</degat>
            <element>terre</element>
            <rarete>rare</rarete>
            <prix>500</prix>
            <qualite>moyenne</qualite>
        </arme>
    </armes>
    <familier>
        <nom>ronron</nom>
        <type>sanglier</type>
    </familier>
</personnage>
